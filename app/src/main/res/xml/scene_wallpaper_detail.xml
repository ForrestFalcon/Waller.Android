<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="1000">
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/textCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/sheetArrowUp"
            app:layout_constraintStart_toEndOf="@id/sheetArrowUp"
            app:layout_constraintTop_toTopOf="@+id/sheetArrowUp"/>

        <Constraint
            android:id="@+id/textHashtags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/sheetArrowUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textCategory"
            app:layout_constraintTop_toTopOf="@+id/sheetArrowUp"
            android:alpha="1"/>

        <Constraint
            android:id="@+id/sheetArrowUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_padding"
            android:rotation="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint
            android:id="@+id/imageCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@id/textViews"
            app:layout_constraintTop_toTopOf="@id/textViews"/>

        <Constraint
            android:id="@+id/textViews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sheetArrowUp"
            app:layout_constraintWidth_percent="0.5"/>

        <Constraint
            android:id="@+id/detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintTop_toBottomOf="@id/textViews"/>

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end"
        motion:deriveConstraintsFrom="@id/start">
        <Constraint
            android:id="@+id/textCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/wallpaper_detail_content_padding"
            app:layout_constraintBottom_toBottomOf="@id/textViews"
            app:layout_constraintEnd_toStartOf="@id/textViews"
            app:layout_constraintStart_toEndOf="@id/imageCategory"
            app:layout_constraintTop_toTopOf="@id/textViews"/>

        <Constraint
            android:id="@+id/textHashtags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0"/>

        <Constraint
            android:id="@+id/sheetArrowUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"/>

        <Constraint
            android:id="@+id/imageCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"/>

        <Constraint
            android:id="@+id/textViews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintWidth_percent="0.5"/>

        <Constraint
            android:id="@+id/detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"/>
    </ConstraintSet>
</MotionScene>